<%= form_with model: @guide do | form | %> 
  <div>
    <%= form.label :title, class: "label has-text-white" %>
    <br>
    <%= form.text_field :title, class: "input", placeholder: "Title" %>
      <% @guide.errors.full_messages_for(:title).each do |message| %>
        <div><%= message %></div>
      <% end %>
  </div>

  <div>
    <%= form.label :description, class: "label has-text-white mt-3" %>
    <br>
    <%= form.text_area :description, class: "textarea", placeholder: "Article..." %>
      <% @guide.errors.full_messages_for(:description).each do |message| %>
        <div><%= message %></div>
      <% end %>
  </div>

  <div>
    <%= form.label :introduction, class: "label has-text-white mt-3" %>
    <br>
    <%= form.text_area :introduction, class: "textarea", placeholder: "Article..." %>
      <% @guide.errors.full_messages_for(:introduction).each do |message| %>
        <div><%= message %></div>
      <% end %>
  </div>
  <div>
    <%= form.label :body, class: "label has-text-white mt-3" %>
    <br>
    <%= form.text_area :body, class: "textarea", :autofocus => true, placeholder: "Article..." %>
      <% @guide.errors.full_messages_for(:body).each do |message| %>
        <div><%= message %></div>
      <% end %>
  </div>
  <!--
  <div>
    <%= form.file_field :picture %>
    </div>
  -->
  <div>
    <%= form.label :is_draft, "Save as draft" %>
    <%= form.check_box :is_draft %>
  </div>
  <div>
    <%= form.submit class: "button is-success mt-2" %>
  </div>
<% end %>
